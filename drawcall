      "text": "export class DrawCall {\n    constructor(mesh, material = new Material()) {\n        this.mesh = mesh;\n        this.material = material;\n        this.transform = new Transform();\n    }\n\n    draw() {\n        if (this.isHidden) return;\n        this.material.apply();\n        this.transform.apply();\n        this.mesh.draw();\n    }\n}"
